{
    "name": "lisa-bot",
    "version": "7.0.0",
    "description": "A discord bot with miscellaneous features",
    "main": "./dist/lisa-bot.common.js",
    "module": "./dist/lisa-bot.esm.js",
    "types": "./types/main.d.ts",
    "settings": {
        "namespace": {
            "module": "lisaBot",
            "file": "lisa-bot"
        },
        "external": [
            "moment",
            "promise-queue",
            "yamljs",
            "logby",
            "chevronjs",
            "di-ngy",
            "lightdash"
        ]
    },
    "scripts": {
        "start": "npm-run-all build serve",
        "start:production": "npm-run-all build serve:production",
        "start:development": "npm-run-all build serve:development",
        "serve": "node dist/lisa-bot.common",
        "serve:production": "cross-env NODE_ENV=production node dist/lisa-bot.common",
        "serve:development": "cross-env NODE_ENV=development node dist/lisa-bot.common",
        "build": "rollup -c ./tasks/rollup.config.js",
        "dist": "npm run build",
        "lint": "npm-run-all lint:ts",
        "lint:ts": "tslint ./src/**/*.ts",
        "fix": "npm-run-all fix:ts fix:prettier",
        "fix:ts": "tslint ./src/**/*.ts --fix",
        "fix:prettier": "prettier ./src/**/* --write"
    },
    "keywords": [
        "discord",
        "bot"
    ],
    "homepage": "https://github.com/FelixRilling/lisa-bot",
    "author": {
        "name": "Felix Rilling",
        "email": "contact@f-rilling.com",
        "url": "https://f-rilling.com"
    },
    "repository": "https://github.com/FelixRilling/lisa-bot",
    "license": "MIT",
    "dependencies": {
        "@types/node": "^12.0.2",
        "@types/promise-queue": "^2.2.0",
        "@types/yamljs": "^0.2.30",
        "chevronjs": "^11.0.1",
        "cross-env": "^5.2.0",
        "di-ngy": "^8.1.1",
        "lightdash": "^10.2.2",
        "logby": "^3.0.0",
        "moment": "^2.24.0",
        "promise-queue": "^2.2.5",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "prettier": "^1.17.1",
        "rollup": "^1.12.2",
        "rollup-plugin-node-resolve": "^5.0.0",
        "rollup-plugin-typescript2": "^0.21.1",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5"
    }
}
